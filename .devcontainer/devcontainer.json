{

    "name": "capstoneProjectDevContainer",

    // Build the devcontainer from the Dockerfile
    "build": {"dockerfile": "../Dockerfile"},

    // The features we should have. This ensures we have the gitbub CLI
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {}
	},

    "remoteEnv": {
        "PYTHONPATH": "${containerWorkspaceFolder}"
    },

    // The extensions installed in the resulting VSCode Version
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker",
                "visualstudioexptteam.vscodeintellicode",
                "qwtel.sqlite-viewer"
            ],
            "settings": {
                "files.trimTrailingWhitespace": true,
                "[python]": {
                    "editor.defaultFormatter": "ms-python.autopep8",
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": "explicit",
                        "source.unusedImports": "explicit"
                    }
                }
            }
        }
    },

    "postCreateCommand": "bash utils/postCreateScript.sh"

}
